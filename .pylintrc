[MASTER]

# Use multiple processes to speed up Pylint.
jobs=6

# A comma-separated list of package or module names from where C extensions may
# be loaded. Extensions are loading into the active Python interpreter and may
# run arbitrary code
# extension-pkg-whitelist=numpy, scipy, pylab, matplotlib

[REPORTS]
# Set the output format. Available formats mv are text, parseable, colorized, msvs
# (visual studio) and html. You can also give a reporter class, eg
# mypackage.mymodule.MyReporterClass.
output-format=colorized

# Tells whether to display a full report or only the messages
reports=no
# ...but display the score summary
score=yes

# Message template to be easily parseable by IDEs
msg-template='{path}:{line}: [{msg_id}({symbol}), {obj}] {msg}'

[MESSAGES CONTROL]
disable=invalid-name, missing-docstring, locally-disabled, file-ignored
max-line-length=119

[TYPECHECK]
ignored-modules = numpy, scipy
